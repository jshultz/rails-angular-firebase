<!-- This is the main Account View. -->
<div id="angularMaterial">

    <div class="row">
        <div class="col-md-9">
            <h2>Admin Page</h2>

            <ul ng-repeat="user in users">
                <li>Name: {{user.full_name}} | Provider: {{ user.provider }}</li>
            </ul>
        </div>
        <div class="col-md-3">
            <div ng-show="authData">
                <p>Hello, {{ displayName }}</p>
                <button ng-click="auth.$unauth()">Logout</button>
            </div>
            <div ng-hide="authData">
                <p>Welcome, please log in.</p>
                <button ng-click="auth.$authWithOAuthPopup('facebook')">Login With Facebook</button>
                <button ng-click="auth.$authWithOAuthPopup('twitter')">Login With Twitter</button>
            </div>
        </div>
    </div>

</div>

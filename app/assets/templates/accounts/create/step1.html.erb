<!-- This is the 1st Step after account creation. -->
<div id="angularMaterial">
<h2>Add your e-mail.</h2>

	<div ng-show="authData">

		<form  ng-submit="step1()" name="myForm">
		    Email: <input type="email" name="input" ng-model="email" required>
		    
		    <input type="submit" id="submit" value="Submit Email Address." />
		    
		    <span class="error" ng-show="myForm.input.$error.required">
		      Your email address is required, please.</span>
		    <span class="error" ng-show="myForm.input.$error.email">
		      That is not a valid email address, yet.</span>
		 </form>

	</div>
	

</div>
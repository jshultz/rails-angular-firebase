<!-- This is the main Account View. -->
<div id="angularMaterial">
<h2>Edit Your Profile Page</h2>

  <div>
    <h3>You're Current Address Is:</h3>
    <div>
      <p ng-if="address">Address: {{ address }}</p>
      <p>crap: {{ crap }}</p>
    </div>
  </div>

      <form novalidate class="simple-form">
        Street Address: <input type="text" ng-model="profile.streetaddress" /><br />
        City: <input type="text" ng-model="profile.city" /><br />
        State: <input type="text" ng-model="profile.state" />
        Zip: <input type="text" ng-model="profile.zip" />
        <input type="button" ng-click="reset()" value="Reset" />
        <input type="submit" ng-click="addressUpdate(profile)" value="Save" />
      </form>
      <pre>form = {{profile | json}}</pre>
      <pre>master = {{master | json}}</pre>


</div>

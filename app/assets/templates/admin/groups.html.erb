<!-- This is the main Account View. -->
<div id="angularMaterial">

    <div class="row">
        <div class="col-md-9">
            <div class="row">
              <div class="col-mid-12">
                <h2>Admin Page</h2>
                <p>Groups</p>
              </div>
            </div>
            <div class="row">
              <div class="col-mid-12">
                <form novalidate class="simple-form">
                  <div class="form-group">
                    <label for="name">Group Name</label>
                    <input type="text" class="form-control" ng-model="group.name" />
                  </div>

                  <input type="button" class="btn btn-default" ng-click="reset()" value="Reset" />
                  <input type="submit" class="btn btn-default" ng-click="updateGroup(group)" value="Save" />
                </form>
              </div>
            </div>
            <div class="row">
              <div class="col-mid-12">
                <ul ng-model="groupList" ng-repeat="group in groupList">
                    <li> {{ group.id }}
                      <form novalidate class="form-inline">
                        <input type="hidden" name="group.id" value="{{ group.id }}" ng-model="group.id">
                        <div class="form-group">
                          <label class="sr-only" for="groupName">Name</label>
                          <div class="input-group">
                            <input type="text" name="group.name" class="form-control" placeholder="{{ group.name }}" value="{{ group.name }}" ng-model="group.name">
                          </div>
                        </div>
                        <input type="submit" class="btn btn-primary" value="Update Group Name" ng-click="updateGroup(group)">
                      </form>
                    </li>
                </ul>
              </div>
            </div>


        </div>
        <div ng-include="'shared/sidebar_login.html'"></div>
    </div>

</div>
